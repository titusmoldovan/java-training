<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controller.RegisterController">
    <Pane layoutY="-15.0" prefHeight="558.0" prefWidth="360.0" style="-fx-background-color: #fff;">
        <Label contentDisplay="CENTER" layoutX="112.0" layoutY="44.0" prefHeight="45.0" prefWidth="139.0" text=" Register ">
            <font>
                <Font name="Segoe UI Semibold" size="30.0" />
            </font>
        </Label>
        <TextField fx:id="userTextField" layoutX="23.0" layoutY="197.0" prefHeight="40.0" prefWidth="315.0" />
        <Label layoutX="24.0" layoutY="167.0" prefHeight="30.0" prefWidth="50.0" text="User">
            <font>
                <Font name="Tahoma" size="16.0" />
            </font>
        </Label>
        <Button fx:id="registerButton" layoutX="25.0" layoutY="402.0" mnemonicParsing="false" onAction="#register" prefHeight="36.0" prefWidth="309.0" style="-fx-background-color: #49c1a2;" text="Register" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
        </Button>
        <Label layoutX="23.0" layoutY="272.0" text="Phone Number">
            <font>
                <Font size="16.0" />
            </font>
        </Label>
        <TextField fx:id="emailTextField" layoutX="22.0" layoutY="297.0" prefHeight="40.0" prefWidth="315.0" />
        <ComboBox fx:id="typeComboBox" layoutX="105.0" layoutY="122.0" prefWidth="150.0" />
        <Button fx:id="goBackButton" layoutX="84.0" layoutY="465.0" mnemonicParsing="false" onAction="#goBackToLoginPage" prefHeight="36.0" prefWidth="195.0" style="-fx-background-color: coral;" text="Changed my mind" textFill="WHITE">
            <font>
                <Font size="14.0" />
            </font>
        </Button>

        <Label fx:id="errorLabel" alignment="CENTER" layoutX="42.0" layoutY="635.0" style="-fx-text-fill: red;"
               text="Please Check If Passwords are the Same" textAlignment="CENTER">
            <font>
                <Font size="16.0"/>
            </font>
        </Label>
    </Pane>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="360.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controller.LoginController">
   <Pane prefHeight="500.0" prefWidth="360.0" style="-fx-background-color: #fff;">
      <Label contentDisplay="CENTER" layoutX="112.0" layoutY="44.0" prefHeight="45.0" prefWidth="139.0" text=" Sign Up">
         <font>
            <Font name="Segoe UI Semibold" size="30.0" />
         </font>
      </Label>
      <TextField fx:id="userTextField" layoutX="24.0" layoutY="152.0" prefHeight="40.0" prefWidth="315.0" />
      <Label layoutX="24.0" layoutY="122.0" prefHeight="30.0" prefWidth="107.0" text="User Name">
         <font>
            <Font name="Tahoma" size="16.0" />
         </font>
      </Label>
      <Label layoutX="25.0" layoutY="226.0" text="Phone Number">
         <font>
            <Font name="Tahoma" size="16.0" />
         </font>
      </Label>
      <Button fx:id="signUpButton" layoutX="26.0" layoutY="330.0" mnemonicParsing="false" onAction="#login" prefHeight="36.0" prefWidth="309.0" style="-fx-background-color: #49c1a2;" text="Sign Up" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <Button fx:id="registerButton" layoutX="83.0" layoutY="395.0" mnemonicParsing="false" onAction="#register" prefHeight="36.0" prefWidth="195.0" style="-fx-background-color: coral;" text="Register" textFill="WHITE">
         <font>
            <Font size="14.0" />
         </font>
      </Button>
      <TextField fx:id="phoneNumberTextField" layoutX="23.0" layoutY="246.0" prefHeight="40.0" prefWidth="315.0" />
      <Label fx:id="errorLabel" alignment="CENTER" layoutX="41.0" layoutY="447.0" style="-fx-text-fill: red;" text="Please Check If Passwords are the Same" textAlignment="CENTER">
         <font>
            <Font size="16.0" />
         </font>
      </Label>
   </Pane>
</AnchorPane>
